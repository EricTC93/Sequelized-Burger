<div class="container">
	<div class="row text-center">
		<img src="./assets/img/burgerImg.png" alt="burgerImg" height="100" width="auto">
		<h1> Burger Eater </h1>
	</div>

	<div class="row text-center">
		<div class="col-md-8 text-center">
			<ul class="list-group" style="list-style-type:none">
				{{#each burgers}}
				{{#unless this.devoured}}
				<li class="list-group-item">
					<form action="/{{this.id}}?_method=PUT" method="POST">
						<div class="form-group form-inline">
							<label>{{this.id}}. {{this.burger_name}}</label>
							<input type="hidden" name="devoured" value="true">
							<button class="btn btn-warning pull-right">DEVOUR</button>
						</div>
					</form>
				</li>
				{{/unless}}
  				{{/each}}
			</ul>
		</div>

		<div class="col-md-3">
			<h6></h6>
			<ul style="list-style-type:none">
				<p><u>Devoured</u></p>
				{{#each burgers}}
				{{#if this.devoured}}
				<li> <p>{{this.id}}. {{this.burger_name}}</p> </li>
				{{/if}}
  				{{/each}}
			</ul>
		</div>
	</div>

	<div class="row text-center">
		<form action="/" method="POST">
			<div class="form-group">
				<textarea class="form-control" rows="1" id="newBurger" name="burger_name"></textarea>
			</div>

			<p>Submit the name of a burger you want to add</p>

			<button class="btn btn-primary" id="submit" type="submit">Submit</button>

		</form>
	</div>
</div>